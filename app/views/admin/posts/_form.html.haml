.group
  = f.label :title, t("activerecord.attributes.post.title", :default => "Title"), :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description
.group
  = f.label :author, t("activerecord.attributes.post.author", :default => "Author"), :class => :label
  = f.text_field :author, :class => 'text_field'
  %span.description
.group
  = f.label :content, t("activerecord.attributes.post.content", :default => "Content"), :class => :label
  = f.text_area :content, :class => 'text_area'
  %span.description
.group
  = f.hidden_field :forum_id, :class => 'text_field'
  %span.description 
.group
  = f.hidden_field :user_id, :class => 'text_field', :value => current_user.id
  %span.description
.group
  = f.file_field :photo
  %span.description
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_forum_posts_path, :class => "text_button_padding link_button"
