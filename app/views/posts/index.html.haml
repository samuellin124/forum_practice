.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", forum_posts_path
      -if user_signed_in?
        %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_forum_post_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Posts
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.post.title", :default => t("activerecord.labels.title", :default => "Title"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @posts.each do |post|
          %tr{:class => cycle("odd", "even")}
            %td
              = post.id
            %td
              = post.title
            %td
              = post.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", forum_post_path(@forum, post)
              -if can_post?(current_user, post)
                |
                #{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_forum_post_path(@forum, post)} |
                #{link_to "#{t("web-app-theme.delete", :default => "Delete")}", forum_post_path(@forum, post), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      = link_to 'Back to Forum List', forums_path
      .actions-bar.wat-cf
        .actions
        = will_paginate @posts
- content_for :sidebar, render(:partial => 'shared/sidebar')
