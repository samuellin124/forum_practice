.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", forum_posts_path
      -if user_signed_in? && post_user?(@post, current_user)
        %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_forum_post_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", forum_post_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.post.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @post.title
      %p
        %b
          = t("activerecord.attributes.post.content", :default => t("activerecord.labels.content", :default => "Content"))
          \:
        = @post.content
      %p
        %b
          = t("activerecord.attributes.post.author", :default => t("activerecord.labels.author", :default => "Author"))
          \:
        = @post.author
      %p
        %b
          = t("activerecord.attributes.post.forum_id", :default => t("activerecord.labels.forum_id", :default => "Forum"))
          \:
        = @post.forum.name
      %p
        %b
        = attachment_helper(@post)
      .wat-cf
        - if user_signed_in? && post_user?(@post, current_user)
          = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_forum_post_path(@forum, @post), :class => "button"
          = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), forum_post_path(@forum, @post), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'shared/sidebar')
