.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", forums_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_forum_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_forum_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Forum
    .inner
      = form_for @forum, :url => forum_path(@forum), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'shared/sidebar')
